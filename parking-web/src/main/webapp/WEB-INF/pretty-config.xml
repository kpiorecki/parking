<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.1.1
                                   		http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.1.1.xsd">

	<!-- remove trailing slashes -->
	<rewrite trailingSlash="remove" toCase="lowercase" redirect="301" />

	<!-- error pages -->
	<url-mapping id="403">
		<pattern value="/403" />
		<view-id value="/WEB-INF/view/error/403.xhtml" />
	</url-mapping>
	<url-mapping id="404">
		<pattern value="/404" />
		<view-id value="/WEB-INF/view/error/404.xhtml" />
	</url-mapping>
	<url-mapping id="error">
		<pattern value="/error" />
		<view-id value="/WEB-INF/view/error/error.xhtml" />
	</url-mapping>
	
	<!-- public pages -->
	<url-mapping id="login">
		<pattern value="/login" />
		<view-id value="/WEB-INF/view/login.xhtml" />
	</url-mapping>

	<url-mapping id="index">
		<pattern value="/" />
		<view-id value="/WEB-INF/view/index.xhtml" />
	</url-mapping>

	<!-- user pages -->
	<url-mapping id="user-home">
		<pattern value="/user" />
		<view-id value="/WEB-INF/view/user/home.xhtml" />
	</url-mapping>

	<!-- admin pages -->
	<url-mapping id="admin-home">
		<pattern value="/admin" />
		<view-id value="/WEB-INF/view/admin/home.xhtml" />
	</url-mapping>

	<url-mapping id="admin-users">
		<pattern value="/admin/users" />
		<view-id value="/WEB-INF/view/admin/users.xhtml" />
	</url-mapping>

</pretty-config>